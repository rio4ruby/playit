- content_for(:left_side) do 

  %h2 Sign in

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = devise_error_messages!

    %fieldset.email.control-group{:class => "#{resource.errors.has_key?(:email) ? 'error' : '' }"}
      = f.label :email
      = f.email_field :email

    %fieldset.pswd.control-group{:class => "#{resource.errors.has_key?(:password) ? 'error' : '' }"}
      = f.label :password
      = f.password_field :password

    - if devise_mapping.rememberable?
      .remember
        = f.check_box :remember_me
        = f.label :remember_me

    .submit
      = f.submit "Sign in"

  .links
    = render :partial => "devise/shared/links"

= render :partial => 'home/welcome'