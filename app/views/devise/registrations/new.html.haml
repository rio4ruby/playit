- content_for(:left_side) do
  %h2 Sign up

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .name
      = f.label :name
      = f.text_field :name
    %fieldset.email.control-group{:class => "#{resource.errors.has_key?(:email) ? 'error' : '' }"}
      = f.label :email
      = f.email_field :email
    %fieldset.pswd.control-group{:class => "#{resource.errors.has_key?(:password) ? 'error' : '' }"}
      = f.label :password
      = f.password_field :password
    .pswd
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    .submit
      = f.submit "Sign up"

  .links
    = render "links"
