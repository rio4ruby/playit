- model_class = ListHead.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:is_playing)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @list_heads.each do |list_head|
      %tr
        %td= link_to list_head.id, list_head_path(list_head)
        %td= list_head.user_id
        %td= list_head.name
        %td= list_head.is_playing
        %td=l list_head.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_list_head_path(list_head), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), list_head_path(list_head), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_list_head_path, :class => 'btn btn-primary'
