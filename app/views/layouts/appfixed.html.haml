!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Player"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "appfixed", :media => "all"
    %link(href="favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

    = javascript_include_tag "appfixed"

  %body
    = render :partial => 'home/page_head'
    .container
      .row
        .span3#left-side
          = render :partial => 'home/playlist'
        .span9
          = render 'layouts/messages'
          #main

            %ul.nav.nav-tabs#main-tabs
              %li
                %a{ :href => "#tab-now-playing", 'data-toggle' => "tab", :id => 'tab-now-playing-link' } Now Playing
              %li
                %a{ :href => "#tab-search", 'data-toggle' => "tab" } Search Results

            .tab-content
              %section.tab-pane#tab-now-playing
                = render :partial => 'home/tab_now_playing'
              %section.tab-pane#tab-search
                = yield

    %footer
      = render :partial => 'layouts/copy'
      = render :partial => 'layouts/powered_by'