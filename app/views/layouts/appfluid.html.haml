!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Playit"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "appfluid", :media => "all"

    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

    = javascript_include_tag "appfluid"
    = csrf_meta_tags
    = yield(:head)
  %body{ :id => 'appfluid', :class => "#{controller}" }
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = render 'layouts/navigation'





    #main{:role => "main"}
      .container-fluid
        .row-fluid
          .span3
            #main-buttons
              %button.btn.btn-primary#open-window-button{ 'data-loading-text' => "Opening player ...",  'data-playeropened-text' => 'Close Player Window', :autocomplete => 'off'}
                Open Player Window
            #playing-playlist
              %p
                Loading...
          .span9
            = render 'layouts/messages'
            = yield
    %footer
      %p &copy; Christopher Kleckner 2017
