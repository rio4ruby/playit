- model_class = Artist.new.class
.artist-index
  .row
    .span9
      %h1=t '.title', :default => model_class.model_name.human.pluralize
  .row
    .span9
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th= model_class.human_attribute_name(:name)
            %th= model_class.human_attribute_name(:wikiname)
            %th=t '.actions', :default => t("helpers.actions")
        %tbody
          - artists.each do |artist|
            %tr
              %td= link_to artist.name, artist_path(artist)
              %td= artist.wikiname
              %td
                = link_to t('.edit', :default => t("helpers.links.edit")), edit_artist_path(artist), :class => 'btn btn-mini'
                = link_to t('.destroy', :default => t("helpers.links.destroy")), artist_path(artist), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'
  .row
    .span9
      = paginate artists


      